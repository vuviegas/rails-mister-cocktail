<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h1> <%= @cocktail.name %></h1>
</div>
<div>
  <div class="container mt-3">
    <h2>Ingredients</h2>
  </br>
    <% @cocktail.doses.each do |dose| %>
      <p>
        <%= dose.ingredient.name %>
        (<%= dose.description %>)
        <%= link_to "Delete",
                    dose_path(dose),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
      </p>
    <% end %>
  </br>
    <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class:'btn text-decoration-none' %>
  </div>
</div>
